# demo.params
# To give an example of what a parameters file should look like
# Assumes demo_setup.sh has been executed to setup the databases and imported demo keys for encryption

export SCRIPT_HOME=/backupapps/scripts

export PRODUCTION_HOST=postgres
export PRODUCTION_PORT=5432
export PRODUCTION_USER=postgres
export PRODUCTION_PASSWORD="admin123"
export PRODUCTION_DB=demo_prod

export TEST_HOST=postgres
export TEST_PORT=5432
export TEST_USER=postgres
export TEST_PASSWORD="admin123"
export TEST_DB=demo_dev

export BACKUP_FILE=/backupapps/data/demo/demo_database.sqlc

# Not using SWIFT in this demo. Just backing up to filesystem as an example.
###export DEST_PREFIX="swift://(containername)"
export DEST_PREFIX="file:///backupapps/filesystem/demo/demo"

export RESTORE_DEFAULT_LOCATION=/backupapps/restore/demo/demo_database.sqlc

export ENCRYPT_SIG=53EC22E53738F12F
export ENCRYPT_PASSWORD="demo"

# Not using SWIFT in demo
###export SWIFT_USERNAME="tenancy:username"
export SWIFT_USERNAME="not used in demo"
export SWIFT_PASSWORD="not used in demo"
export SWIFT_AUTHURL="not used in demo"
export SWIFT_AUTHVERSION="2"

export POLICY_DAYS_TO_KEEP=7
export POLICY_WEEKS_TO_KEEP=4
export POLICY_MONTHS_TO_KEEP=12
export POLICY_DAY_FOR_WEEKLY=7 # Sunday
export POLICY_DAY_FOR_MONTHY=1 # 1st day of month
